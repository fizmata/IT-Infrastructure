{% for vm in groups['dns_masters']%}
    server {{ hostvars[vm]['ansible_default_ipv4']['address'] }}{
    keys{transfer.key; nsupdate.key};
    };
{%endfor%}

zone "{{domain}}"{
  type slave;
  file "/var/lib/bind/db.{{domain}}";
  masters {
{% for vm in groups['dns_masters']%}
    {{ hostvars[vm]['ansible_default_ipv4']['address'] }};
{%endfor%}
  };
};
