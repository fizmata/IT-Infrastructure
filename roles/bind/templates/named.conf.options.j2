key "transfer.key" {
	algorithm hmac-sha256;
	secret "{{transfer_key}}";
};

key "nsupdate.key" {
	algorithm hmac-sha256;
	secret "{{update_key}}";
};



options {
	directory "/var/cache/bind";

  allow-query {
  {% for n in allowed_networks %}
          {{ n }};
  {% endfor %}
  };

	forwarders {
  {% for f in dns_forwarders %}
          {{ f }};
  {% endfor %}
	};

	dnssec-validation no;

	auth-nxdomain no;    # conform to RFC1035
};
statistics-channels {
	inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};
