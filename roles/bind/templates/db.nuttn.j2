$TTL	604800
{{ domain }}	IN	SOA	{{ groups['dns_servers'][0] }}.{{ domain }}  gz.{{ domain }} (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{{ domain }}	IN	NS	 {{ groups['dns_servers'][0] }}
{% for vm in groups['all'] %}
{{ vm }}	IN	A	{{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}
